{
    // 调试模式可以在库中加断点 在.vscode\launch.json 中添加"justMyCode": false
    // F1: open defualt setting 打开各选项详尽说明
    "update.mode": "manual",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace", // 'Cascadia Code','JetBrains Mono','Source Code Pro',
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.lineHeight":24, // 从0到你的字体大小计算行高
    //下面四行分别设置不同粗细的字体，选择一种
    // "editor.fontWeight": "300", // Light
    // "editor.fontWeight": "400", // Regular
    // "editor.fontWeight": "500", // Medium
    // "editor.fontWeight": "600", // Bold
    "editor.minimap.showSlider": "always",
    "editor.minimap.scale": 1,
    "editor.columnSelection": false,
    "editor.multiCursorModifier": "alt",
    "editor.bracketPairColorization.enabled": true,
    "editor.unicodeHighlight.includeStrings": false,
    "editor.unicodeHighlight.includeComments": false,
    "editor.detectIndentation": false,  // 不让vscode跳过你设置的tabsize自动判断
    "window.newWindowDimensions": "offset", // "offset" maximized
    "outline.showVariables": false,
    "extensions.autoUpdate": false,  // 如果有插件升级后出问题，阻止自动升级
    "python.terminal.activateEnvironment": false,  // 打开终端自动执行切换到指定环境，在cmd下使用conda可以设为True，如果在bash下使用conda会报错windows路径
    "python.testing.unittestEnabled": true,
    "python.analysis.autoImportCompletions": false,
    "python.languageServer": "Pylance",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=100"
        // "--ignore=E501, E262",
    ],
    "python.formatting.autopep8Args": ["--ignore","E402"],
    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": [
        // "--sytle=yapf_style.cfg"
    ],
    "diffEditor.ignoreTrimWhitespace": false,
    "window.autoDetectColorScheme": true,
    "workbench.preferredDarkColorTheme": "MacOS Modern Dark - Big Sur Xcode Default",
    "workbench.preferredLightColorTheme": "MacOS Modern Light - Big Sur Xcode Default",
    "workbench.editor.wrapTabs": true,
    "workbench.colorCustomizations": {
        "window.activeBorder": "#ff7b00c5",
        "sideBarSectionHeader.border": "#ebebeb",
        "inputOption.activeBackground": "#9b9999" // 查找界面的高亮标识
        // "input.border":"#ff0000" // vs 1.61发现没这个查找到的内容在光标位置不高亮
        // "editor.foldBackground": "#355000",  // 折叠代码块高亮  editor.foldingHighlight
		// "editor.foreground": "#010216",
    },
    "jupyter.exportWithOutputEnabled": true,
    "jupyter.sendSelectionToInteractiveWindow": true,
    "security.workspace.trust.emptyWindow": false,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.rebaseWhenSync": true,  // 远程拉到本地用变基，注意合并主干的时候别用这个，git bash下手动
    "remote.SSH.remotePlatform": {
        "bwg": "linux",
        "bwg-ipv6": "linux"
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/.ipynb_checkpoints":true,
        "**/.pytest_cache": true,
        "**/.vscode": true
    },
    //////////////////////////////////////////////////////////////////
    // 下面是插件设置
    // Trailing Spaces
    // "trailing-spaces.trimOnSave": true,
    "files.trimTrailingWhitespace": true,
    // Python Docstring Generator
    "autoDocstring.docstringFormat": "numpy",
    // markdownlint
    "markdownlint.config": {
        "default": true,
        "MD046": false, //代码块缩进或围栏起来都可以
        "MD024": false  //不同标题下的子标题内容可以重复
    },
    // PYQT Integration
    // "pyqt-integration.qtdesigner.path": "C:\\ProgramData\\Anaconda3\\Lib\\site-packages\\pyqt5_tools\\Qt\\bin\\designer.exe",
    // "pyqt-integration.qtdesigner.path": "C:\\ProgramData\\Anaconda3\\Library\\bin\\designer.exe",
    "pyqt-integration.qtdesigner.path": "C:\\Users\\yourusername\\.conda\\envs\\p37\\Scripts\\designer.exe",
    //"pyqt-integration.qtdesigner.path": "c:\\tools\\pyenvs\\your_virtualenv\\Lib\\site-packages\\qt5_applications\\Qt\\bin\\designer.exe",
    //
    // "pyqt-integration.pyuic.cmd":"C:\\ProgramData\\Anaconda3\\Library\\bin\\pyuic5.bat",
    // "pyqt-integration.pyuic.cmd":"C:\\Users\\yourusername\\.conda\\envs\\p37\\Library\\bin\\pyuic5.bat",
    "pyqt-integration.pyuic.cmd":"c:\\tools\\pyenvs\\your_virtualenv\\Scripts\\pyuic5.exe",
    //
    // "pyqt-integration.pyrcc.cmd":"C:\\ProgramData\\Anaconda3\\Library\\bin\\pyrcc5.bat",
    // "pyqt-integration.pyrcc.cmd":"C:\\Users\\yourusername\\.conda\\envs\\p37\\Library\\bin\\pyrcc5.bat",
    "pyqt-integration.pyrcc.cmd":"c:\\tools\\pyenvs\\your_virtualenv\\Scripts\\pyrcc5.exe",
    //
    "pyqt-integration.pyuic.compile.filepath": "..\\uicode\\Ui_${ui_name}.py",
    "pyqt-integration.pyrcc.compile.filepath": "..\\uicode\\${qrc_name}_rc.py",
    // Rainbow CSV https://github.com/mechatroner/vscode_rainbow_csv/blob/master/test/color_customization_example.md#colors-customization
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            // 自定义 禁用注释文字斜体显示
            {
                "scope": "comment",
                "settings": {
                   "fontStyle": ""
                }
            },
            // 下面是rainbowCsv的自定义设置
            {
                "scope": "rainbow1",
                "settings": {
                   "foreground": "#E6194B"
                }
            },
            {
                "scope": "keyword.rainbow2",
                "settings": {
                   "foreground": "#3CB44B",
                   "fontStyle": "bold"
                }
            },
            {
                "scope": "entity.name.function.rainbow3",
                "settings": {
                   "foreground": "#ff9b19"
                }
            },
            {
                "scope": "comment.rainbow4",
                "settings": {
                   "foreground": "#0082C8",
                   "fontStyle": "underline"
                }
            },
            {
                "scope": "string.rainbow5",
                "settings": {
                   "foreground": "#FABEBE"
                }
            },
            {
                "scope": "variable.parameter.rainbow6",
                "settings": {
                   "foreground": "#46F0F0",
                   "fontStyle": "bold"
                }
            },
            {
                "scope": "constant.numeric.rainbow7",
                "settings": {
                   "foreground": "#F032E6"
                }
            },
            {
                "scope": "entity.name.type.rainbow8",
                "settings": {
                   "foreground": "#008080",
                   "fontStyle": "underline"
                }
            },
            {
                "scope": "markup.bold.rainbow9",
                "settings": {
                   "foreground": "#F58231"
                }
            },
            {
                "scope": "invalid.rainbow10",
                "settings": {
                   "foreground": "#bace09"
                }
            }
        ]
    },
    // Todo Tree
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "tasklist",
            "iconColour": "#37aaaa",
            "foreground": "#127272",
            "background": "#D0FFFF",
            "type": "tag"
        },
        "FIXME": {
            "icon": "eye",
            "iconColour": "#fc0707",
            "foreground": "#fc0707",
            "background": "#D0FFFF",
            "type": "tag"
        },
        "XXX": {
            "icon": "beaker",
            "iconColour": "#df5577",
            "foreground": "#df5577",
            "background": "#D0FFFF",
            "type": "tag"
        },
        "NOTE": {
            "icon": "info",
            "iconColour": "#3e58a0",
            "foreground": "#4217dd",
            "background": "#D0FFFF",
            "type": "tag"
        }
        // "[x]":{
        //   "foreground": "#64dd17",
        //   "background":"#008800"
        // },
        // "[ ]":{
        //   "foreground": "#f44336",
        //   "background": "#592c2c",
        // },
    },
    // "todo-tree.regex.regex": "((//|#|<!--|;|/\\*|^)\\s*($TAGS)|^//\\s*\\[x\\]|^//\\s*\\[ \\])",
    "todo-tree.general.tags": [
        "TODO",
        "FIXME",
        "XXX",
        "NOTE"
        //"[ ]",
        //"[x]"
    ],
    "todo-tree.general.statusBar": "tags",
    //"todo-tree.tree.showScanModeButton": false,
    "gitlens.views.tags.branches.layout": "list",
    //////////////////////////////////////////////////////////////////
    //
    // 下面这些是vscode自己加的，随时变
    //
    "workbench.colorTheme": "GitHub Dark Default",
}