{
    // 调试模式可以在库中加断点 在.vscode\launch.json 中添加"justMyCode": false
    // F1: open defualt setting 打开各选项详尽说明
    "update.mode": "manual",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // 带补丁字体预览 https://www.nerdfonts.com/font-downloads
    // 带补丁字体下载 https://github.com/ryanoasis/nerd-fonts/releases
    // 编程字体预览大全 https://www.programmingfonts.org/#cascadia-code
    // 注意顺序：优先正式字体，回落到带补丁的字体以显示图标，最后是保底的系统自带字体
    // 优先图标字体，然后回落到中文字体，参见章节 [设置中文字体](gun_tools.md)
    "editor.fontFamily": "'FiraCode Nerd Font Retina', 'Noto Serif CJK SC Light', Consolas", // 'Cascadia Code','JetBrains Mono','Source Code Pro', monospace
    "terminal.integrated.fontFamily": "'MesloLGS Nerd Font', Consolas",
    //"editor.fontLigatures": true,
    // https://github.com/tonsky/FiraCode/wiki/How-to-enable-stylistic-sets
    "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero', 'onum'",
    "editor.fontSize": 14,
    "editor.lineHeight":24, // 从0到你的字体大小计算行高
    //下面四行分别设置不同粗细的字体，选择一种
    // "editor.fontWeight": "300", // Light
    // "editor.fontWeight": "400", // Regular
    // "editor.fontWeight": "500", // Medium
    // "editor.fontWeight": "600", // Bold
    "editor.minimap.showSlider": "always",
    "editor.minimap.scale": 1,
    "editor.columnSelection": false,
    "editor.multiCursorModifier": "alt",
    "editor.unicodeHighlight.includeStrings": false,
    "editor.unicodeHighlight.includeComments": false,
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hant": true
    },
    // "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs":  "active",
    "editor.detectIndentation": false,  // 不让vscode跳过你设置的tabsize而自行决定
    "editor.autoIndent": "keep",  // 自动缩进只跟随上一行位置就可以了，乱跳挺烦的。各个语言还可以单独设置选项
    "outline.showVariables": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "window.titleBarStyle": "custom", // 整合菜单栏和标题栏
    "window.menuBarVisibility": "toggle",  // 按 alt 键显示系统菜单
    "window.activeBorder": "#ff7b00c5",
    "window.newWindowDimensions": "offset", // "offset" maximized
    "window.autoDetectColorScheme": false,  // 深色背景下切换项目时会闪一下白，很烦人，关了
    "workbench.editor.wrapTabs": true,
    "jupyter.exportWithOutputEnabled": true,
    "jupyter.sendSelectionToInteractiveWindow": true,
    "security.workspace.trust.emptyWindow": false,
    "security.workspace.trust.untrustedFiles": "open",
    "git.enableCommitSigning": true,
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.rebaseWhenSync": true,  // 远程拉到本地用变基，注意合并主干的时候别用这个，git bash下手动
    // 各个语言还可以单独设置选项
    "[python]": {
        "editor.formatOnType": true,
        "editor.autoIndent": "full",
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "python.terminal.activateEnvironment": true,  // 打开终端自动执行切换到指定环境，对 conda 自定义路径的环境有错误：在cmd下使用conda可以设为True，如果在bash下使用conda会报错windows路径
    "python.testing.unittestEnabled": true,
    "python.analysis.autoImportCompletions": false,
    "python.analysis.exclude": ["dist/python","env_py37"], // 屏蔽项目内私有python环境目录误报 “overriding the stdlib module”
    "python.languageServer": "Pylance",
    "python.analysis.packageIndexDepths": [
        {
            "name": "matplotlib",
            "depth": 3
        },
        {
            "name": "pyqtgraph",
            "depth": 4,
            "includeAllSymbols": true
        }
    ],
    // 微软提供了扩展替换了以下python包安装代码格式化和PEP规范检查的方式
    // https://github.com/microsoft/vscode-python/wiki/Migration-to-Python-Tools-Extensions#alternatives
    //// "python.linting.pylintEnabled": false,
    //// "python.linting.flake8Enabled": true,
    //// "python.linting.flake8Args": [
    ////     "--max-line-length=100"
    ////     // "--ignore=E501, E262",
    //// ],
    //// "python.formatting.provider": "yapf",
    //// "python.formatting.yapfArgs": [
    ////     // "--sytle=yapf_style.cfg"
    //// ],
    //// "python.formatting.autopep8Args": ["--ignore","E402"],
    // python 的格式化工具用 black
    "black-formatter.args": [
        // https://black.readthedocs.io/en/stable/the_black_code_style/current_style.html
        "--skip-string-normalization"  // 双引号字符串太乱了
    ],
    // python 的 lint 工具用 flake8，参数调整为配合 black
    "flake8.args": [
        // compatible with black
        "max-line-length = 88",
        "--ignore",
        "E203"
    ],
    "files.exclude": {
        "**/__pycache__": true,
        "**/.ipynb_checkpoints":true,
        "**/.pytest_cache": true,
        "**/.vscode": true
    },
